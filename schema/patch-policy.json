{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "policy checks (e.g. OPA/Rego rules) the user should perform manually",
    "id": "https://opencontainers.org/schema/patch/policy",
    "type": "object",
    "properties": {
        "type": {
            "description": "Policy engine type (e.g. opa)",
            "type": "string"
        },
        "rego": {
            "description": "OPA/Rego policy",
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}